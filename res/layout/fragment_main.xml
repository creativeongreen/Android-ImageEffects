<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.creativeongreen.imageeffects.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/tv_param_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/abc_action_bar_default_padding_material" />

    <ProgressBar
        android:id="@+id/pb_1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/animated_on_processing"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:divider="#242424"
        android:dividerHeight="1dp"
        android:padding="15dp"
        android:textColor="#000000"
        android:textSize="12sp" />

</RelativeLayout>